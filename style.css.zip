body {
  font-family: sans-serif;
  background: linear-gradient(to bottom, #1a1a1a, #333);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
}

.container {
  width: 90%;
  max-width: 500px;
  padding: 20px;
  background: #292929;
  border-radius: 15px;
  box-shadow: 0 0 20px #ff4081aa;
}

#chat-log {
  height: 250px;
  overflow-y: auto;
  border: 1px solid #444;
  padding: 10px;
  margin-bottom: 10px;
  background: #1e1e1e;
}

input {
  width: 70%;
  padding: 10px;
  border: none;
  border-radius: 10px;
}

button {
  width: 25%;
  padding: 10px;
  background: #ff4081;
  border: none;
  border-radius: 10px;
  color: white;
  cursor: pointer;
}